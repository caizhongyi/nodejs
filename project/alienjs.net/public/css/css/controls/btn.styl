.btn
  position: relative;
  font-size: 14px;
  padding: 5px 12px;
  if ie-support
    *padding: 5px 12px;
  display: inline-block;
  vertical-align: middle;
  transition: all 0.4s ease-in-out;
  background: none;
  line-height: 1.4 !important;
  color: #fff;
  text-decoration: none;
  white-space: nowrap;
  text-align: center;
  border: 1px solid transparent;
  /*box-shadow: 0 0 5px #ddd;*/
  text-shadow: 0 0 1px #b1b1b1;
  opacity: 0.8;
  cursor: pointer;
  &:active
    opacity: 1;

  -btns = {
      default:#fff,
      link: transparent,
      primary:#428BCA,
      info:#5BC0DE,
      success:#5CB85C,
      warning:#F0AD4E,
      danger:#D9534F,
      light:#c4caa5
    }

  for item in -btns
    &-{item}
      background: -btns[item];
      if item == 'default' || item == 'light'
        color: #333;
        border:1px solid #ddd;
      else if item == 'link'
        color: #428BCA;
      &:active
        background: @background - 50%

  -btn-sizes = xs sm md lg xlg
  -btn-min-size = 3px 8px
  for i in -btn-sizes
    -btn-min-size[0] = -btn-min-size[0] + 1
    -btn-min-size[1] = -btn-min-size[1] + 2
    &-{i}
      padding :  -btn-min-size[0] -btn-min-size[1]

  &-file
    display: inline-block;
    position: relative;
    overflow: hidden;
    [type='file'], input {
      font-size: 100px;
      margin: 0;
      padding: 0;
      opacity 0
      position: absolute;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      cursor: pointer;
    }
  &[disabled],&.disabled{
    color: #999 !important;
    background: #eee !important;
    border-color: #eee !important;
    cursor: default;
    &:active{
      left: 0;
      top: 0;
    }
    &:hover:extend(&[disabled]){}
  }
  &[disabled].metro,&.metro.disabled,&.metro.disabled:hover{
    border-color: #eee;
  }
  &.block
    display: block;
  input&.block
    width: 100%;
    @extend .btn.block





