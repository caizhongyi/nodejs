@require 'mixins/index'

reset()
base-classes()

if !ie-support
  *,
  *:before,
  *:after {
    box-sizing: border-box;
  }

body, html
  if ie-support
    _overflow-y: auto;
  margin:0;
  padding: 0;
  // height: 100%;
  // overflow-x: hidden;
  min-height: 100%;


body {
  -webkit-text-size-adjust: none;
  color: default-color;
  font: font-size/1.7 "宋体";
  //word-break: break-all;    //断词换行
  word-wrap: break-word; //不断词内容换行
  //white-space:pre-wrap;
}

audio {
  width: 100%;
}
input,button,a,span,img,select,em,strong{ vertical-align: middle;}
strong {font-weight: bold;}

blockquote small {
  color: #999;
  display: block;
}
pre { overflow: hidden;}
p { font-size:13px; text-indent: 0; }


.nowrap
  white-space: nowrap;
  word-break: normal;
  word-wrap: normal;

.grayscale
  grayscale()

.center-block
  margin-left: auto;
  margin-right: auto;

// box-align 实现垂直居中  box-pack 实现水平居中
.center-box
  text-align: center;
  display: box;
  box-orient: horizontal;
  box-pack: center;
  box-align: center;

.unstyled
  unstyled()
